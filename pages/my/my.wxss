/* pages/my/my.wxss */
page {
  background-color: #f8f8f8;
}

.login-container {
  height: 900rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* 图标的样式 */
.contact-filled {
  width: 150rpx;
  margin-bottom: 16rpx;
}

/* 登录按钮的样式 */
.btn-login {
  width: 90%;
  border-radius: 100px;
  margin: 15px 0;
  background-color: #007aec;
  color: #f8f8f8;
}

/* 按钮下方提示消息的样式 */
.tips-text {
  font-size: 12px;
  color: gray;
}

/* 用户信息样式 */
.top-box {
  height: 400rpx;
  background-color: #007aec;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

/* 用户头像样式 */
.top-box .avatar {
  display: block;
  width: 90px;
  height: 90px;
  border-radius: 45px;
  border: 2px solid white;
  box-shadow: 0 1px 5px black;
}

/* 用户昵称样式 */
.top-box .nickname {
  color: white;
  font-weight: bold;
  font-size: 16px;
  margin-top: 10px;
}

/* 面板样式设置 */
.panel {
  background-color: white;
  border-radius: 3px;
}



.line{
  width: 100%;
  height: 100rpx;
  /* border-bottom: 1rpx solid gray; */
  /* background-color: blue; */
}
.line image{
  position: relative;
  width: 60rpx;
  height: 60rpx;
  top: 20rpx;
  
}
.line  #feedback{
  position: relative;
  margin-left: 10rpx;
  width: 45rpx;
  height: 45rpx;
  top: 15rpx;
}